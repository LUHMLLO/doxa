---
import LayoutHtml from "../layouts/html.astro";

const fridges = [
  {
    name: "Fridge #01",
    location: "Home",
    temp: 14.8,
  },
  {
    name: "Fridge #02",
    location: "Lab",
    temp: 12,
  },
  {
    name: "Fridge #01",
    location: "Lab",
    temp: 27.3,
  },
];
---

<LayoutHtml>

    <main
      class="h-min--100vh w--100 bg-primary p--16 gap--16 radius-theme h--100 overflow-hidden"
    >
      <section
        class="grid grid-cols--1 md:grid-cols--2 gap--32 p--16 bg-accent radius-theme dpt-dark"
      >
        <div class="w--100">
          <h6 class="offb--16">Smart Fridges</h6>
          <p>Real time monitoring for all your online devices</p>
          <button class="clr-primary bg-dark radius-theme"
            >add new device</button
          >
        </div>
        <div class="flex column gap--8 noshrink">
          {
            fridges.map((data) => (
              <widget class="block bg-complementary dpt-dark w--100 p--16 radius-theme overflow-hidden">
                <row class="flex row align--center">
                  <h6 class="clr-tertiary m--0 w--100 text--14">Temperature</h6>
                  <span class="inline-flex justify--center align--center gap--4 clr-tertiary text--12 m--0 px--12 py--6 bg-primary radius-theme noshrink">
                    {data.temp >= 18 ? 
                        (<icon class="icon circle--12 text--12 p--8">
                            <i class="iconoir-warning-triangle" />
                        </icon>
                        <small class="text--12 weight--medium">Unhealthy</small>)
                    :
                        (<icon class="icon circle--12 text--12 p--8">
                            <i class="iconoir-lens" />
                        </icon>
                        <small class="text--12 weight--medium">Normal</small>)
                    }
                  </span>
                </row>
                <h3 class="offt--8 mb--0">{data.temp}</h3>
                <p class="m--0 text--12 weight--medium">
                  {data.location}, {data.name}
                </p>
              </widget>
            ))
          }
        </div>
      </section>
    </main>
</LayoutHtml>
